@model Instructor;
<h1>Create a new instructor</h1>
<form asp-action="AddInstructor" asp-controller="Instructor" method="post">
    <div class="form-group">
        <label asp-for="Id">Id</label>
        <input class="form-control" asp-for="Id">

    </div>
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Rank">Course</label>
        <select asp-for="Rank"> asp-items="@Html.GetEnumSelectList(typeof(Rank))"</select>>
    </div>

    <div class="form-group">
        <label asp-for="HiringDate">Hiring Date</label>
        <input asp-for="HiringDate" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>